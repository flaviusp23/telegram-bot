# Admin Panel Configuration Example
# Copy this file to .env and update with your values

# Environment (DEV or PROD)
ENVIRONMENT=DEV

# Admin Server Settings
ADMIN_HOST=127.0.0.1
ADMIN_PORT=8000

# Database Settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=diabetes_monitoring
DB_PORT=3306

# Security Settings
# Generate a secure key: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=your-very-secure-secret-key-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Admin Access (comma-separated Telegram IDs)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Default Admin Account
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_EMAIL=admin@example.com

# Encryption (from main app - optional)
ENCRYPTION_KEY=your_encryption_key_here

# Session Settings
SESSION_COOKIE_NAME=admin_session
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf,xlsx,xls,csv

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100